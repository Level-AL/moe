package day15_StringTasks;

import java.util.Scanner;

public class Task7 {

	public static void main(String[] args) {

		
		String str = "alex";
		
		if (str.length() == 0 ) {
			System.out.println("String is empty");
		}
		
		if (str.length() > 3) {
			System.out.println(str.substring(str.length()-3));
		}
		 
		if(str.length() <= 3) {
			System.out.println(str);
		}
		
		
	}

}
